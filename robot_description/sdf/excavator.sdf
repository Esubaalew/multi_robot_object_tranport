<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="excavator">
    <!-- Links -->
    <link name="base">
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>meshes/base.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>meshes/base.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <inertial>
        <mass>100</mass>
        <inertia>
          <ixx>1</ixx>
          <iyy>1</iyy>
          <izz>1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
    </link>

    <link name="body">
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>meshes/body.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>meshes/body.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <inertial>
        <mass>50</mass>
        <inertia>
          <ixx>1</ixx>
          <iyy>1</iyy>
          <izz>1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
    </link>

    <link name="arm1">
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>meshes/arm1.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>meshes/arm1.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <inertial>
        <mass>20</mass>
        <inertia>
          <ixx>1</ixx>
          <iyy>1</iyy>
          <izz>1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
    </link>

    <link name="arm2">
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>meshes/arm2.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>meshes/arm2.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <inertial>
        <mass>10</mass>
        <inertia>
          <ixx>1</ixx>
          <iyy>1</iyy>
          <izz>1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
    </link>

    <link name="shovel">
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>meshes/shovel.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>meshes/shovel.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <inertial>
        <mass>5</mass>
        <inertia>
          <ixx>1</ixx>
          <iyy>1</iyy>
          <izz>1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
    </link>

    <!-- Joints -->
    <joint name="body_rotation" type="continuous">
      <parent>base</parent>
      <child>body</child>
      <pose>0 0 0.6 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <effort>1000.0</effort>
          <velocity>0.5</velocity>
        </limit>
      </axis>
    </joint>

    <joint name="arm1_rotation" type="revolute">
      <parent>body</parent>
      <child>arm1</child>
      <pose>0.933 -0.134 0.302 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.308</lower>
          <upper>-0.087</upper>
          <effort>1000.0</effort>
          <velocity>0.5</velocity>
        </limit>
      </axis>
    </joint>

    <joint name="arm2_rotation" type="revolute">
      <parent>arm1</parent>
      <child>arm2</child>
      <pose>2.586 0 -0.625 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-2.428</lower>
          <upper>-0.085</upper>
          <effort>1000.0</effort>
          <velocity>0.5</velocity>
        </limit>
      </axis>
    </joint>

    <joint name="shovel_rotation" type="revolute">
      <parent>arm2</parent>
      <child>shovel</child>
      <pose>-1.362 0 -0.154 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-2.395</lower>
          <upper>-0.357</upper>
          <effort>1000.0</effort>
          <velocity>0.5</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Velocity Control Plugin -->
    <plugin filename="gz-sim-velocity-control-system" name="gz::sim::systems::VelocityControl">
      <topic>/excavator/cmd_vel</topic>
      <linear_velocity>
        <x enabled="true" min="-5.0" max="5.0"/>
        <y enabled="true" min="-5.0" max="5.0"/>
      </linear_velocity>
      <angular_velocity>
        <z enabled="true" min="-2.0" max="2.0"/>
      </angular_velocity>
    </plugin>
  </model>
</sdf>
