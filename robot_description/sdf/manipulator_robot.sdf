<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="excavator_robot">
    <static>false</static>

    <!-- Base of the Excavator -->
    <link name="base_link">
      <pose>0 0 0.05 0 0 0</pose>
      <inertial>
        <mass>10.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Left Track -->
    <link name="left_track">
      <pose>0 -0.35 0 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.2 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.2 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Right Track -->
    <link name="right_track">
      <pose>0 0.35 0 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.2 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.6 0.2 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Boom -->
    <link name="boom">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>3.0</mass>
        <pose>1.25 0 0 0 0 0</pose>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>1.25 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>2.5 0.1 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>1.25 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>2.5 0.1 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Stick -->
    <link name="stick">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>2.0</mass>
        <pose>0 0 0.75 0 0 0</pose>
        <inertia>
          <ixx>0.03</ixx>
          <iyy>0.03</iyy>
          <izz>0.03</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0.75 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 1.5</size>
          </box>
        </geometry>
        <material>
          <ambient>1 0.65 0 1</ambient>
          <diffuse>1 0.65 0 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0 0 0.75 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 1.5</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Bucket -->
    <link name="bucket">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <pose>0 0 0 0 0 0</pose>
        <inertia>
          <ixx>0.005</ixx>
          <iyy>0.005</iyy>
          <izz>0.005</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 0 -0.7854 0</pose> <!-- 45-degree tilt for scoop shape -->
        <geometry>
          <box>
            <size>0.4 0.2 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>
      <collision name="collision">
        <pose>0 0 0 0 -0.7854 0</pose>
        <geometry>
          <box>
            <size>0.4 0.2 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- Joint: Base to Left Track (Fixed) -->
    <joint name="joint_base_to_left_track" type="fixed">
      <parent>base_link</parent>
      <child>left_track</child>
      <pose>0 -0.35 -0.05 0 0 0</pose>
    </joint>

    <!-- Joint: Base to Right Track (Fixed) -->
    <joint name="joint_base_to_right_track" type="fixed">
      <parent>base_link</parent>
      <child>right_track</child>
      <pose>0 0.35 -0.05 0 0 0</pose>
    </joint>

    <!-- Joint: Base to Boom -->
    <joint name="joint_base_to_boom" type="revolute">
      <parent>base_link</parent>
      <child>boom</child>
      <pose>0 0 0.1 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower> <!-- -90 degrees -->
          <upper>1.57</upper>  <!-- +90 degrees -->
          <effort>20</effort>
          <velocity>1.0</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Joint: Boom to Stick -->
    <joint name="joint_boom_to_stick" type="revolute">
      <parent>boom</parent>
      <child>stick</child>
      <pose>2.5 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-2.0</lower>
          <upper>1.0</upper>
          <effort>20</effort>
          <velocity>1.0</velocity>
        </limit>
      </axis>
    </joint>

    <!-- Joint: Stick to Bucket -->
    <joint name="joint_stick_to_bucket" type="revolute">
      <parent>stick</parent>
      <child>bucket</child>
      <pose>0 0 1.5 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
          <effort>20</effort>
          <velocity>1.0</velocity>
        </limit>
      </axis>
    </joint>

  </model>
</sdf>
