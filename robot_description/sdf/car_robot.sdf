<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="truck_robot">
    <static>false</static>

    <!-- Base Link - Truck Chassis -->
    <link name="base_link">
      <pose>0 0 0.3 0 0 0</pose>
      <inertial>
        <mass>500.0</mass>
        <inertia>
          <ixx>100.0</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>250.0</iyy>
          <iyz>0.0</iyz>
          <izz>300.0</izz>
        </inertia>
      </inertial>

      <!-- Main Chassis -->
      <visual name="chassis">
        <geometry>
          <box>
            <size>3.0 1.5 0.5</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>

      <!-- Cargo Bed -->
      <visual name="cargo_bed">
        <pose>-0.5 0 0.25 0 0 0</pose>
        <geometry>
          <box>
            <size>2.0 1.5 0.1</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Wood</name>
          </script>
        </material>
      </visual>

      <!-- Cargo Bed Walls -->
      <visual name="front_wall">
        <pose>0.5 0 0.5 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 1.5 0.5</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Wood</name>
          </script>
        </material>
      </visual>

      <visual name="left_wall">
        <pose>-0.5 0.75 0.5 0 0 0</pose>
        <geometry>
          <box>
            <size>2.0 0.1 0.5</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Wood</name>
          </script>
        </material>
      </visual>

      <visual name="right_wall">
        <pose>-0.5 -0.75 0.5 0 0 0</pose>
        <geometry>
          <box>
            <size>2.0 0.1 0.5</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Wood</name>
          </script>
        </material>
      </visual>

      <!-- Driver Cabin -->
      <visual name="cabin">
        <pose>1.25 0 0.75 0 0 0</pose>
        <geometry>
          <box>
            <size>1.0 1.4 1.0</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Blue</name>
          </script>
        </material>
      </visual>

      <collision name="collision">
        <geometry>
          <box>
            <size>3.0 1.5 0.5</size>
          </box>
        </geometry>
      </collision>

      <!-- Sensors -->
      <sensor name="lidar" type="ray">
        <pose>1.5 0 1.0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
      </sensor>

      <sensor name="camera" type="camera">
        <pose>1.5 0 1.0 0 0 0</pose>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
      </sensor>

      <sensor name="rear_sonar" type="ray">
        <pose>-1.5 0 0.5 0 0 3.14159</pose>
        <visualize>true</visualize>
        <update_rate>5</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>5</samples>
              <resolution>1</resolution>
              <min_angle>-0.2</min_angle>
              <max_angle>0.2</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>5.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
      </sensor>
    </link>

    <!-- Wheels -->
    <!-- Front Left Wheel -->
    <link name="wheel_fl">
      <pose>1.25 0.8 0.3 0 1.5707 1.5707</pose>
      <inertial>
        <mass>20.0</mass>
        <inertia>
          <ixx>0.5</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.5</iyy>
          <iyz>0.0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Front Right Wheel -->
    <link name="wheel_fr">
      <pose>1.25 -0.8 0.3 0 1.5707 1.5707</pose>
      <inertial>
        <mass>20.0</mass>
        <inertia>
          <ixx>0.5</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.5</iyy>
          <iyz>0.0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Rear Left Wheel -->
    <link name="wheel_rl">
      <pose>-1.25 0.8 0.3 0 1.5707 1.5707</pose>
      <inertial>
        <mass>20.0</mass>
        <inertia>
          <ixx>0.5</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.5</iyy>
          <iyz>0.0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Rear Right Wheel -->
    <link name="wheel_rr">
      <pose>-1.25 -0.8 0.3 0 1.5707 1.5707</pose>
      <inertial>
        <mass>20.0</mass>
        <inertia>
          <ixx>0.5</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.5</iyy>
          <iyz>0.0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.3</radius>
            <length>0.2</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Wheel Joints -->
    <joint name="joint_wheel_fl" type="revolute">
      <parent>base_link</parent>
      <child>wheel_fl</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <effort>1000</effort>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="joint_wheel_fr" type="revolute">
      <parent>base_link</parent>
      <child>wheel_fr</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <effort>1000</effort>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="joint_wheel_rl" type="revolute">
      <parent>base_link</parent>
      <child>wheel_rl</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <effort>1000</effort>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="joint_wheel_rr" type="revolute">
      <parent>base_link</parent>
      <child>wheel_rr</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <effort>1000</effort>
        </limit>
        <dynamics>
          <damping>1.0</damping>
          <friction>1.0</friction>
        </dynamics>
      </axis>
    </joint>

  </model>
</sdf>